{
    "compilerOptions": {
        "module": "node16",
        "target": "ES2022",
        "moduleResolution": "node16",
        "lib": ["ES2023"],
        "sourceMap": true,
        "noEmit": true,
        "esModuleInterop": true,

        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"],
}
